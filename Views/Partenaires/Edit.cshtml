@model Aafeben.Models.PartnerModel

@{
    Layout ="~/Views/Shared/Dashboard/_DashboardLayout.cshtml";
    ViewData["Title"] = "Ajouter Un Partenaire";
}


<section class="bg-body p-3 d-flex flex-column gap-3 mt-3 rounded-3 shadow">
 
    <h4>@ViewData["Title"]</h4>

    <form asp-action="Edit" class="row g-3"  method="post" enctype="multipart/form-data" >

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Nom Du Partenaire</label>
            <input asp-for="Name" placeholder="UNESCO, ..." class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="UrlLink" class="form-label">Lien Web Du Partenaire</label>
            <input asp-for="UrlLink" placeholder="lien du site ou compte facebook" class="form-control" />
            <span asp-validation-for="UrlLink" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Image" class="form-label">Logo Du Partenaire</label>
            <input type="text" asp-for="Image" class="form-control" disabled required/>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">

            <button type="submit" class="btn btn-primary" >
                <i class="bi bi-list-columns-reverse me-2"></i> Modifier
            </button>

            <a class="btn btn-warning text-white" asp-action="Index">
                Retour Ã  la liste
            </a>

        </div>
    </form>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
