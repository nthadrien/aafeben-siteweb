@model Aafeben.Models.PartnerModel

@{
    Layout ="~/Views/Shared/Dashboard/_DashboardLayout.cshtml";
    ViewData["Title"] = "Supprimer Partenaire";
}

<h3 class="alert alert-warning">Etes-vous sûr de vouloir supprimer Ce Partenaire?</h3>

<div class="p-3">
    

    <dl class="row g-3">
        <dt class = "col-sm-2">
            Lien Web
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UrlLink)
        </dd>
        <dt class = "col-sm-2">
            Nom Du Partenaire
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Logo Du Partenaire
        </dt>
        <dd class = "col-sm-10">
            <img height="128px" width="128px" src="/images/partenaires/@Model.Image" alt="">
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger me-4" />
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
