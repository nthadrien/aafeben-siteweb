@model Aafeben.Models.ProjectModel

@{
    Layout ="~/Views/Shared/Dashboard/_DashboardLayout.cshtml";
    ViewData["Title"] = "Ajouter Un Projet";
}

<section class="bg-body p-3 d-flex flex-column gap-3 rounded-3 shadow">
 
    <h4>@ViewData["Title"]</h4>

    <form enctype="multipart/form-data" method="post" class="row g-3" asp-action="Create">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12">
            <label asp-for="Title" class="form-label">Titre</label>
            <input placeholder="le titre du projet" asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        
        <div class="col-md-6">
            <label asp-for="FeaturedImageUrl" class="form-label">Image</label>
            <input type="file" accept=".png, .jpg, .jpeg, .svg"  asp-for="FeaturedImageUrl" class="form-control" />
            <span asp-validation-for="FeaturedImageUrl" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Language" class="form-label">Langue</label>
            <select class="form-select" asp-for="Language" >
                <option value="en">en</option>
                <option value="fr">fr</option>
            </select>
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Zone" class="form-label">Zone de mise en œuvre</label>
            <input asp-for="Zone" placeholder="L'endroit ou la zone" class="form-control" />
            <span asp-validation-for="Zone" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="StartDate" class="form-label">Date de début</label>
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="EndDate" class="form-label">Date de fin </label>
            <input asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Duration" class="form-label">Durée de projet </label>
            <input placeholder="1 ans / 1 year / 3 mois ??" asp-for="Duration" class="form-control" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>


        <div>
            <label asp-for="Content" class="form-label">Contenu</label>
            <textarea asp-for="Content"  id="mytextarea" required></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="d-flex flex-wrap gap-2 justify-content-between align-items-center">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-list-columns-reverse"></i>
                Ajouter
            </button>
            <a class="btn btn-secondary" href="/fr/administrateurs/projets/">Retour a la List</a>
        </div>

    </form>


</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
<script>

     tinymce.init({
        selector: '#mytextarea',
        plugins: ["image","table"]
    });
</script>