@model PaginatedList<Aafeben.Models.UserModel>

@{
    Layout ="~/Views/Shared/Dashboard/_DashboardLayout.cshtml";
    ViewData["Title"] = "Staff";
    int j = 1;
}



<section class="d-flex flex-column gap-3 shadow rounded-2 p-3 ">

    <aside class="d-flex flex-wrap gap-2 justify-content-between align-items-center">

        <h3>Liste du Staff</h3>

        <p>
            <a class="btn btn-primary" asp-action="Create">
                <i class="bi bi-list-check me-2"></i>
                Nouveau
            </a>
        </p>
    </aside>

    <aside class="table-reponsive">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Nom
                    </th>
                    <th>
                        Role
                    </th>
                    <th>
                        Nom D'utilisateur
                    </th>
                    <th>
                        Photo
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @( (j++) + (Model.PageIndex-1)*j)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnRole)
                        @Html.DisplayFor(modelItem => item.FrRole)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td>
                        <div class="btn-group">
                                    <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        options
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end position-fixed">
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="bi bi-pencil-square me-2"></i> Editer</a> 
                                        <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="bi bi-trash3 me-2"></i> Supprimer
                                        </a>
                                    </ul>
                                </div>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </aside>

    <partial name="~/Views/Shared/Dashboard/_Pagination.cshtml" />

</section>
