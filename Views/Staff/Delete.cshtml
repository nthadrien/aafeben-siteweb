@model Aafeben.Models.UserModel

@{
    Layout ="~/Views/Shared/Dashboard/_DashboardLayout.cshtml";
    ViewData["Title"] = "Delete";
}

<h3 class="alert alert-warning">
    Etes-vous sûr de vouloir supprimer le staff?
</h3>

<dl class="row">
    <dt class = "col-sm-2">
        Nom
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class = "col-sm-2">
        Role (Anglais | Français)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.EnRole) |
        @Html.DisplayFor(model => model.FrRole)
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Supprimer" class="btn btn-danger me-4" /> 
    <a class="btn" id="go-back">Annuler la Suppression du staff</a>
</form>
