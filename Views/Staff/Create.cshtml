@model Aafeben.Models.UserModel

@{
    Layout ="~/Views/Shared/Dashboard/_DashboardLayout.cshtml";
    ViewData["Title"] = "Ajouter Un";
}

<section class="bg-body rounded-3 shadow p-3">

    <h3 class="my-3">@ViewData["Title"] Staff</h3>

    <form class="row g-3" asp-action="Create" method="post" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12">
            <label asp-for="Name" class="form-label">Nom</label>
            <input type="text" placeholder="Nom: Ewane Eric..." asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="EnRole" class="form-label">Role (En)</label>
            <input type="text" placeholder="Role en anglais" asp-for="EnRole" class="form-control" />
            <span asp-validation-for="EnRole" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="FrRole" class="form-label">Role (Fr)</label>
            <input type="text" placeholder="Role en Francais" asp-for="FrRole" class="form-control" />
            <span asp-validation-for="FrRole" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Image" class="form-label">Image</label>
            <input type="file" accept=".jpg, .jpeg, .png" asp-for="Image" class="form-control" required/>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <div class="d-flex flex-wrap justify-content-between gap-2">
            <input type="submit" value="Ajouter" class="btn btn-primary" />
            <a class="btn btn-warning text-white" id="go-back">Annuler</a>
        </div>
    </form>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
