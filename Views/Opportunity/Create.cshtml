@model Aafeben.Models.OpportunityModel

@{
    Layout ="~/Views/Shared/Dashboard/_DashboardLayout.cshtml";
    ViewData["Title"] = "Ajouter Une Opportunites";
}

<section class="bg-body rounded-3 shadow p-3">

    <h3 class="my-3">@ViewData["Title"]</h3>

    <form class="row g-3" asp-action="Create"  method="post" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col">
            <label asp-for="Job" class="form-label">Le Job</label>
            <input  type="text" placeholder="exple: Comptable, Avocat..." asp-for="Job" class="form-control" />
            <span asp-validation-for="Job" class="text-danger"></span>
        </div>

        <div class="col">
            <label asp-for="Language" class="form-label">Langue</label>
            <select asp-for="Language" class="form-select" >
                <option value="en">en</option>
                <option value="fr">fr</option>
            </select>
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>

        <div class="col">
            <label asp-for="PublishedDate" class="form-label">Date De L'annonce</label>
            <input type="date" default-value="new Date()" asp-for="PublishedDate" class="form-control" />
            <span asp-validation-for="PublishedDate" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="JobDescription" class="form-label">Description</label>
            <textarea placeholder="description bref du job" rows="2" asp-for="JobDescription" class="form-control" ></textarea>
            <span asp-validation-for="JobDescription" class="text-danger"></span>
        </div>


        <div>
            <label asp-for="JobRequirements" class="form-label">Compétences requises</label>
            <textarea rows="6"  placeholder="compétence 1 \n compétence 2" asp-for="JobRequirements" class="form-control" ></textarea>
            <span asp-validation-for="JobRequirements" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Doc" class="form-label">Document</label>
            <input type="file" accept=".pdf, .doc, .docx" asp-for="Doc" class="form-control" required/>
            <span asp-validation-for="Doc" class="text-danger"></span>
        </div>

        <div class="d-flex flex-wrap justify-content-between gap-2">
            <input type="submit" value="Ajouter" class="btn btn-primary" />
            <a class="btn btn-secondary text-capitalize" href="/fr/administrateurs/opportunites/" id="go-back">Retour à la liste</a>
        </div>

    </form>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
