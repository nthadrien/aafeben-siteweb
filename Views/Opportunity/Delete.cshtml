@model Aafeben.Models.OpportunityModel

@{
    Layout ="~/Views/Shared/Dashboard/_DashboardLayout.cshtml";
    ViewData["Title"] = "Supprimer Une Opportuni..";
}

<h3 class="alert alert-warning">Etes-vous sûr de vouloir supprimer ceci ?</h3>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Nom
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Job)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JobDescription)
        </dd>
        <dt class = "col-sm-2">
            Langue
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Language)
        </dd>
        <dt class = "col-sm-2">
            Compétences Requises
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JobRequirements)
        </dd>
        <dt class = "col-sm-2">
            Date De L'annonce
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublishedDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger me-4" />
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
