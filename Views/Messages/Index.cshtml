@model IEnumerable<Aafeben.Models.MessageModel>

@{
    Layout ="~/Views/Shared/Dashboard/_DashboardLayout.cshtml";
    ViewData["Title"] = "Liste des Messages";
    int j = 1;
}


<section class="d-flex flex-column gap-3 shadow rounded-2 p-3 ">

    <div class="d-flex flex-wrap gap-2 justify-content-between align-items-center">
        <h3>@ViewData["title"]</h3>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <td>#</td>
                    <th>
                        Nom
                    </th>
                    <th>
                        Date de Reception
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Sujet
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>@(j++)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SendOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td>
                        <a class="btn btn-secondary" href="/fr/administrateurs/messages/supprimer/@item.Id" >
                            <i class="bi bi-pencil-square me-2"></i> 
                            Voir Message
                        </a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>

</section>