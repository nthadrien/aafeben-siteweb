    <p>@Localizer["staffText"]</p>

    <div class="container mx-auto row row-cols-2 row-cols-lg-4 justify-content-evenly g-3 py-4">

        @foreach(var Staff in Model.Users ) {

            <div class="col">
                <img height="180px" width="180px" class="object-fit-cover mb-3 rounded" src="../../images/staff/@(Staff.Image ?? "placeholder.png")" alt="staff @Staff.Name">
