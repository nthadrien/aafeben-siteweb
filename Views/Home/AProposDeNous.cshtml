            </div>
        }
    </div>
</section>

@* Partenaires start---------------------------------------------- *@
<section id="partenaires" class="container-fluid text-center py-4 px-3 overflow-hidden">

    <h1 class="text-capitalize text-center my-3">Nos Partenaires</h1>
    <div id="slid" class="slider">
        @foreach(var partner in Model.Partners ) {
            <a data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="@partner.Name" href="@partner.UrlLink" target="_blank" class="slide-item p-2">
                <img loading="lazy"  height="130px" width="130px" class="object-fit-contain rounded" src="~/images/partenaires/@(partner.Image ?? "placeholder.png")" alt="partner image">
            </a>
        }

        @foreach(var partner in Model.Partners.Slice(0,5) ) {
            <a data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="@partner.Name" href="@partner.UrlLink" target="_blank" class="slide-item p-2">
                <img loading="lazy"  height="130px" width="130px" class="object-fit-contain rounded" src="~/images/partenaires/@(partner.Image ?? "placeholder.png")" alt="partner image">
            </a>
        }
    </div>

</section>


<script>
    const slider = document.querySelector("#slid");
    const children = slider.children;
    let j =0;
    


    function transform () {
        const last = children[children.length - 1];
        const lastBound = last.getBoundingClientRect();
        if ( lastBound.right <= window.innerWidth ) {
            j = 0;
            slider.style.transition = "0s";
        } else slider.style.transition = "0.4s";
        slider.style.transform = `translateX(${-j}px)`;
        j+=140;
    }
    setInterval(transform , 3000);
</script>

